#!/usr/bin/env python
import sys

errMsg = 'Usage: ' + sys.argv[0] + ' "Queue ID" "Queue Title"'
testres = len(sys.argv)
if testres < 3:
	print errMsg
	sys.exit(1)

sys.path.append('/opt/oplog/conf')
import oplog
import opdb
opdb = opdb.opdb()
sql = "update queues set title='%s' where id='%s'" % (sys.argv[2],sys.argv[1])
opdb.insert(sql)
